---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf()
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Hey, I'm Kahtaf
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I'm a software engineer in Toronto. I lead teams at startups,
            mostly building at the intersection of security, data privacy and AI.
            I run a small studio on the side for ideas I can't let go of.
          </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <h5 class="font-semibold text-black dark:text-white">
          Some things I've shipped
        </h5>
        <article class="space-y-4">
          <ul class="animate list-disc">
            <li>
              <p>
                Built an Android <Link
                  href={"https://bitspice.net/automate/"}
                  external
                  aria-label={`AutoMate - Car Dashboard`}
                >
                  app
                </Link> that hit 1M+ downloads. <Link
                  href={"https://lifehacker.com/automate-turns-your-phone-into-an-android-auto-style-da-1695925050"}
                  external
                  aria-label={`AutoMate - Car Dashboard`}
                >
                  Lifehacker
                </Link> picked it up
              </p>
            </li>
            <li>
              <p>
                Led the design and implementation of the <Link
                  href={"https://www.binance.com/en/square/post/17605050021105/"}
                  external
                  aria-label={`Vana Data Portability Protocol`}
                >
                  Vana Data Portability Protocol
                </Link>
              </p>
            </li>
            <li>
              <p>
                Led the team that built <Link
                  href={"https://www.rdatadao.org/"}
                  external
                  aria-label={`Reddit Data DAO`}
                >
                  r/datadao
                </Link>, the first Data DAO. <Link
                  href={"https://techcrunch.com/2024/04/13/vana-plans-to-let-users-rent-out-their-reddit-data-to-train-ai/"}
                  external
                  aria-label={`Vana plans to let users rent out their Reddit data to train AI`}
                >
                  TechCrunch
                </Link> wrote about it
              </p>
            </li>
            <li>
              <p>
                Hold a couple of <Link
                  href={"/docs/patents/11831407.pdf"}
                  external
                  aria-label={`Non-custodial Techniques for Data Encryption and Decryption`}
                >
                  patents
                </Link> on non-custodial data <Link
                  href={"/docs/patents/12047496.pdf"}
                  external
                  aria-label={`Non-custodial Techniques for Granular Encryption and Decryption`}
                >
                  encryption
                </Link>
              </p>
            </li>
            <li>
              <p>
                Run <Link
                  href={"https://bitspice.net/"}
                  external
                  aria-label={`BitSpice Software Studio`}
                >
                  BitSpice
                </Link>, a small software studio where I build things I want to exist
              </p>
            </li>
          </ul>
          <p class="animate">
            Here's a bit more <Link href="/about">about</Link> me.
          </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Latest posts</h5>
          <Link href="/blog"> See all posts </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            blog.map((post) => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Work Experience
          </h5>
          <Link href="/work"> See all work </Link>
        </div>
        <ul class="flex flex-col space-y-4">
          {
            work.map((entry) => (
              <li>
                <div class="font-semibold text-black dark:text-white">
                  {entry.data.role}
                </div>
                <div class="flex justify-between">
                  <div class="text-sm opacity-75">
                    {entry.data.companyUrl ? (
                      <Link href={entry.data.companyUrl} external>{entry.data.company}</Link>
                    ) : (
                      entry.data.company
                    )}
                  </div>
                  <div class="text-sm opacity-75">
                    {dateRange(entry.data.dateStart, entry.data.dateEnd)}
                  </div>
                </div>
                <article>
                  <entry.Content />
                </article>
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Recent projects
          </h5>
          <Link href="/projects"> See all projects </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            projects.map((project) => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">Let's Connect</h5>
        <article>
          <p>
            Say hi, send me a link, tell me I'm wrong about something.
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {
            SOCIALS.map((SOCIAL) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={SOCIAL.HREF}
                  external
                  aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                >
                  {SOCIAL.NAME}
                </Link>
                {"/"}
              </li>
            ))
          }
          <li class="line-clamp-1">
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.NAME}`}
            >
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
